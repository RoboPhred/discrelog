{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "npm run build",
      "type": "shell",
      "problemMatcher": [
        {
          "owner": "webpack-ts",
          "applyTo": "closedDocuments",
          "fileLocation": "absolute",
          "severity": "error",
          "pattern": [
            {
              // ERROR in /Users/william.matthews/Documents/dev-personal/discrelog/src/components/EditorLayout/ToolWindow.tsx
              "regexp": "^(WARNING|ERROR) in .+$"
            },
            {
              // ./src/components/EditorLayout/ToolWindow.tsx
              // Unused; redundant data.
              "regexp": "^.+$"
            },
            {
              "regexp":
                "^\\[tsl\\] (WARNING|ERROR) in (\\/[^(]+)\\((\\d+),(\\d+)\\)$",
              "severity": 1,
              "file": 2,
              "line": 3,
              "column": 4
            },
            { "regexp": "^TS(\\d+): (.+)$", "code": 1, "message": 2 },
            { "regexp": "^\\w+(.+)$", "message": 1, "loop": true }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Compiling\\.\\.\\.",
            "endsPattern": "(Failed\\sto\\scompile)|(Compiled)"
          }
        }
        // Unused; redundant info.
      ]
    }
  ]
}

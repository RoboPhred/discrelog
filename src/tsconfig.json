{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "../node_modules",
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  }
}